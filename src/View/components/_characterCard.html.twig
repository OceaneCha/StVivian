            <div class="col">
                <div class="card border border-dark bg-dark text-white mb-3 h-100">
                    <img src="{{character.picture}}" class="card-img-top" alt="" />
                    <div class="card-body">
                        <h5 class="card-title">AKA 
                        {% if not character.firstname %}
                            {{character.alias}}  
                        {% else %}
                            {{ character.firstname }} {{ character.lastname }}
                        {% endif %}    
                        </h5>
                        <p class="card-text">{{ character.biography }}</p>
                    </div>
                    <div class="card-footer text-center">
                        <small class="text-muted">
                        {% if character.teamID %}
                            {{ character.teamname }}
                        {% else %}
                            Civilian
                        {% endif %}
                        </small>
                    </div>
                </div>
            </div>